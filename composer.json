{
    "name": "shiyan/process-builder",
    "description": "Builds command lines for symfony/process using magic methods.",
    "keywords": ["php", "oop", "process", "shell", "exec", "cmd"],
    "license": "MIT",
    "authors": [
        {
            "name": "Mykhailo Shyian",
            "homepage": "https://github.com/mikeshiyan"
        }
    ],
    "support": {
        "source": "https://github.com/mikeshiyan/process-builder",
        "issues": "https://github.com/mikeshiyan/process-builder/issues"
    },
    "require": {
        "php": "^8.0",
        "ext-ctype": "*",
        "symfony/process": "^5 || ^6 || ^7"
    },
    "require-dev": {
        "phpunit/phpunit": "^12"
    },
    "autoload": {
        "psr-4": {
            "Shiyan\\ProcessBuilder\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Shiyan\\ProcessBuilder\\tests\\": "tests/"
        }
    },
    "config": {
        "sort-packages": true
    },
    "scripts": {
        "test": "vendor/bin/phpunit --coverage-text --coverage-filter src tests"
    }
}
